using System;
namespace program2
{
    class Program
    {
        static void Main(string[] args)
        {   
            // using Writeline() and ReadLine method for Input and Output
            string name;
            Console.WriteLine("Please enter your name : ");
            name = Console.ReadLine();
            // concadinating hello + name
            Console.WriteLine("Hello " + name);
            
            Console.ReadKey();
      
        }
    }   
}
