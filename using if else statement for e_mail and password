using System;

namespace program_ifelseif_string
{
    class Program
    {
        static void Main(string[] args)
        {
            string email;
            Console.WriteLine("Please enter your E-mail");
            email = Console.ReadLine();
            //concadinating input email
            Console.WriteLine("Your E-mail is : " + email);
           
            Console.WriteLine("Please enter the password");
            string password = Console.ReadLine();

            //using ifelse method
            if (password == "ruturajpotdar")
            {
                Console.WriteLine("You have Successfully logged in");
            }
            else
            {
                Console.WriteLine("invalid password, Please enter the correct password");
            }
            Console.ReadKey();
        }
        
    }
    
}
